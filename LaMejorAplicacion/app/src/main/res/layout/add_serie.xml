<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_serie_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/lbl_popup_serie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="bottom"
            android:text="Nombre Serie:"
            android:textSize="17sp"
            />
        <EditText
            android:id="@+id/txt_popup_serie_name"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:textSize="17sp"
            android:imeOptions="actionDone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >

        <ImageView android:id="@+id/ic_popup_has_season"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:focusable="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
        />

        <TextView
            android:id="@+id/lbl_popup_serie_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Tiene temporada"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            />
        <EditText
            android:id="@+id/txt_popup_serie_season"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:inputType="number"
            android:textSize="17sp"
            android:visibility="invisible"
            android:imeOptions="actionDone"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/lbl_popup_serie_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="bottom"
            android:text="Episodio:"
            android:textSize="17sp"
            />
        <EditText
            android:id="@+id/txt_popup_serie_episode"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:inputType="number"
            android:textSize="17sp"
            android:imeOptions="actionDone"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >
        <ImageView
            android:id="@+id/ic_popup_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_48dp"
            />
        <ImageView
            android:id="@+id/ic_popup_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_black_48dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/lbl_popup_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:textColor="@color/red"
        android:text="Episodio:"
        android:visibility="gone"
        android:textSize="17sp"
        />


</LinearLayout>